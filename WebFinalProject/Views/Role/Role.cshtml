@{
    ViewData["Title"] = "Role";
}

<body style="text-align: center">

    <div>
        <h2>Choose Role</h2>

        @using (Html.BeginForm("Role", "Role", FormMethod.Post))
        {
            <div>
                <label>
                    <input type="radio" name="role" value="student" style="color: palevioletred;"> Student
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="role" value="faculty" style="color: palevioletred;"> Faculty
                </label>
            </div>

            <button type="submit" style="margin-top: 40px; color: white; background-color: palevioletred; width: 100%; padding: 10px; border: none; border-radius: 7px; font-weight: bold; font-size: 20px;">Continue</button>
        }

        @if (!string.IsNullOrEmpty(ViewBag.SelectedRole))
        {
            <div>
                @ViewBag.SelectedRole
            </div>
        }
    </div>
</body>


