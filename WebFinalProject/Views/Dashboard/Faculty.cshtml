@{
    ViewData["Title"] = "Faculty";
    Layout = "~/Views/Shared/_LayoutWithTabs.cshtml";
}

@model WebFinalProject.ViewModels.FacultyViewModel

@using (Html.BeginForm("Faculty", "Dashboard", FormMethod.Get))
    {
        @Html.TextBoxFor(m => m.SearchTerm, new { @style = "padding: 10px; width: 100%;", placeholder = "Search Faculty.."})
        <input type="submit" value="Search" style="background-color: palevioletred; color: white; font-weight: bold; font-size: 17px; padding: 7px; margin-top: 5px;"/>
    }

<body style="margin-top: 20px;">

    @if (Model.Faculties.Any())
    {
        <table style="margin-top: 20px; width: 100%">

            <tbody style="width: 100%; margin-top: 7px;">
                @foreach (var faculty in Model.Faculties)
                {
                    <tr style="width: 100%; margin-top: 10px;">
                        <a href="@Url.Action("ShowAvailability", "ShowAvailability", new { id = faculty.Id })" style="color: palevioletred; font-size: 17px; font-weight: bold; padding: 10px; border: solid; border-color: palevioletred; border-width: 2px; width: 100%; border-radius: 10px; display: block; margin-top: 10px;">@faculty.Name</a>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No faculties found for "@Model.SearchTerm".</p>
    }

</body>
